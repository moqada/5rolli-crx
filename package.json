{
  "name": "5rolli-crx",
  "description": "Chrome Extension for 5ROLLI",
  "version": "0.1.1",
  "author": "moqada <moqada@gmail.com>",
  "bugs": {
    "url": "https://github.com/moqada/5rolli-crx/issues"
  },
  "dependencies": {
    "5rolli-time-summarizer": "^0.1.0",
    "main-loop": "^3.2.0",
    "nbem": "^0.3.1",
    "virtual-dom": "^2.1.1",
    "virtual-element": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.3.13",
    "babel-core": "^6.3.13",
    "babel-plugin-espower": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chokidar-cli": "^1.2.0",
    "codecov.io": "^0.1.6",
    "cpx": "^1.3.0",
    "crx": "^3.0.3",
    "esdoc": "^0.4.3",
    "eslint": "^2.4.0",
    "eslint-config-moqada": "^10.0.0",
    "gh-pages": "^0.11.0",
    "isparta": "^4.0.0",
    "jsdom": "^8.0.1",
    "mocha": "^2.3.4",
    "npm-run-all": "^1.3.3",
    "power-assert": "^1.2.0",
    "stylus": "^0.54.0",
    "watchify": "^3.6.1"
  },
  "homepage": "https://github.com/moqada/5rolli-crx#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/moqada/5rolli-crx.git"
  },
  "scripts": {
    "build": "npm-run-all build:* pack",
    "build:copy": "cpx 'src/**/*.{json,png}' app/",
    "build:css-content": "stylus src/styles/content.styl -o app/styles/content.css",
    "build:js-content": "browserify -t babelify src/content/index.js -o app/content.js",
    "codecov": "cat coverage/lcov.info | codecov",
    "deploy": "npm-run-all doc gh-pages",
    "doc": "esdoc -c esdoc.json",
    "gh-pages": "gh-pages -d doc",
    "lint": "eslint --cache {src,test}",
    "pack": "crx pack app -o build/5rolli.crx -p key.pem",
    "postrelease": "npm run deploy",
    "prebuild": "rm -rf app && mkdir -p app/styles",
    "predoc": "rm -rf doc",
    "prepack": "rm -rf build && mkdir -p build",
    "prerelease": "git diff --exit-code && npm run --if-present build",
    "pretest": "rm -rf coverage",
    "prewatch": "mkdir -p app/styles",
    "release": "ghr",
    "test": "npm-run-all lint test:coverage",
    "test:coverage": "babel-node $(npm bin)/isparta cover --report text --report html --report lcovonly _mocha -- test/**/*spec.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:copy": "cpx --watch 'src/**/*.{json,png}' app/",
    "watch:css-content": "stylus -w src/styles/content.styl -o app/styles/content.css",
    "watch:js-content": "watchify -v -t babelify src/content/index.js -o app/content.js",
    "watch:lint": "chokidar src test -c 'npm run -s lint'",
    "watch:test": "mocha --watch test/**/*-spec.js"
  }
}
